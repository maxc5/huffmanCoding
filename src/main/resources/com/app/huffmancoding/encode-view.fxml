<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom, #333456, #2b2d42); -fx-padding: 15;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.huffmancoding.EncodeController">

    <!-- Top: Barra de herramientas -->
    <top>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 12; -fx-background-color: rgba(43,45,66,0.8); -fx-background-radius: 5;">
            <Label style="-fx-text-fill: #f8f7f9; -fx-font-size: 16px; -fx-font-weight: bold;" text="Texto a codificar:" />

            <TextField fx:id="input" promptText="Ingresa un texto..." style="-fx-pref-width: 400; -fx-background-color: #f8f7f9; -fx-background-radius: 4; -fx-border-color: #6d72c3; -fx-border-radius: 4; -fx-border-width: 1.5; -fx-font-size: 14px; -fx-padding: 5 10;" />

            <Button fx:id="btnEncode" onMouseClicked="#encode" style="-fx-background-color: #6d72c3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8 25; -fx-background-radius: 4; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="Generar" />
        </HBox>
    </top>

    <!-- Left: Panel lateral -->
    <left>
        <VBox prefWidth="250" style="-fx-background-color: rgba(43,45,66,0.6); -fx-padding: 20; -fx-spacing: 15;" />
    </left>

    <!-- Center: Área de visualización del árbol -->
    <center>
        <StackPane fx:id="canvasContainer" style="-fx-background-color: linear-gradient(to bottom right, #f8f7f9, #e5e5e5); -fx-border-color: #6d72c3; -fx-border-width: 2; -fx-border-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);">
            <Canvas fx:id="myCanvas" height="400.0" width="600.0" StackPane.alignment="CENTER" />
        </StackPane>
    </center>

    <!-- Bottom: Barra de estado -->
    <bottom>
        <StackPane style="-fx-background-color: rgba(43,45,66,0.8); -fx-padding: 10;">
            <Label fx:id="bitStringLabel" text="cadena de bits: " style="-fx-text-fill: #f8f7f9; -fx-font-size: 14px; -fx-font-weight: bold; -fx-font-family: 'Consolas'; -fx-padding: 5 15; -fx-background-radius: 3; -fx-background-color: rgba(109,114,195,0.3);" StackPane.alignment="TOP_LEFT" />
        </StackPane>
    </bottom>
</BorderPane>
